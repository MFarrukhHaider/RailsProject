<h1>New Post</h1>

<%= form_with model:@post ,url: posts_create_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :context %><br>
    <%= form.text_field :context %>
  </div>

  <div>
    <%= form.check_box :published %>
    <%= form.label :published, "Published" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
